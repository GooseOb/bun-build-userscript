{
  "name": "bun-build-userscript",
  "version": "1.1.0",
  "author": "GooseOb",
  "description": "Building index.ts and header.txt into one js-file via bun",
  "module": "index.ts",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "build-userscript": "index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GooseOb/bun-build-userscript.git"
  },
  "files": [
    "index.ts",
    "README.md"
  ],
  "scripts": {
    "prepublishOnly": "(sed 's/\\r$//' index.ts > .tmp) && (mv .tmp index.ts) && npm publish"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
